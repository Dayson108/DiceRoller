  // When API is ready...                                                         
  gapi.hangout.onApiReady.add(
    function(eventObj) {
      if (eventObj.isApiReady) {
        console.log("The API is ready");
        gapi.hangout.data.onMessageReceived.add(onMessageReceived);
      }
    }
  );
}
// Wait for gadget to load.                                                       
gadgets.util.registerOnLoadHandler(init);
//end Init Script
</script>


