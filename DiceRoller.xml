<script>
//Start Message Recieved Script
function onMessageReceived(event) {
  try {
    console.log("Start");
    updateResultList(JSON.parse(event.message));
  }catch (e) { console.log(e); } 
}
//End Message Retrieved Script
</script>


<script>
