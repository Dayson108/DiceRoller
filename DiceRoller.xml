<script>
var LocalResultList = [];

function clearChat(){
  LocalResultList = []
  document.getElementById('ResultListMain').innerHTML = "";
}

function updateResultList(newInput){
  /*Status Codes:
  * -1  Nat 1
  * 0 Dice Roll Result
  * 1 Nat 20
  */
  LocalResultList.push(newInput);
  var tempOutput = "";
  var i = 0;
  var listLength = LocalResultList.length;
  tempOutput = "<ul>";
  for(i = listLength; i > 0; --i){
    tempOutput += "<li>";
    if(LocalResultList[i-1].status == 1){
      tempOutput += "**"
    }
    else if(LocalResultList[i-1].status == -1)
    {
      tempOutput += "--"
    }
    tempOutput += LocalResultList[i - 1].name + ": ";
    tempOutput += LocalResultList[i - 1].result;
    if(LocalResultList[i-1].status == 1){
      tempOutput += "**"
    }
    else if(LocalResultList[i-1].status == -1)
    {
      tempOutput += "--"
    }
    tempOutput += "</li><hr>";
  }
  tempOutput += "</ul>";
  document.getElementById('ResultListMain').innerHTML = tempOutput;
  }


function rolldAD20(){
  var dice1 = Math.floor((Math.random() * 20) + 1);
  var dice2 = Math.floor((Math.random() * 20) + 1);
  var dice = 0;
  var plus = Number(document.getElementById("ADd20P").value);
  var tempName = document.getElementById("UserName").value;
  var tempStatus = 0;
  var tempResult;

  if(document.getElementById('RadioAdv').checked){
    console.log("Advantage");
    if(dice1 >= dice2){
      dice = dice1;
    }
    else{
      dice = dice2;
    }
  }
  else if(document.getElementById('RadioDis').checked){
    console.log("Disadvantage");
    if(dice1 <= dice2){
      dice = dice1;
    }
    else{
      dice = dice2;
    }
  }
  if(dice == 20)
  {
    tempStatus = 1;
  }
  else if(dice == 1){
    tempStatus = -1;
  }
  if(tempName == ""){
    tempName = "Unnamed";
  }
  
  tempResult = "[" + dice1 + "][" + dice2 + "]-->[" + dice + "] + {" + plus + "} = " + (dice + plus);
  
  var output;  
  if(document.getElementById("PrivateRoll").checked == false){
    output = {result: tempResult, name: tempName, status: tempStatus}; 
    updateResultList(output);
    gapi.hangout.data.sendMessage(JSON.stringify(output));
  }
  else{
  output = {result: tempResult, name: "Private Roll", status: tempStatus};
  updateResultList(output);
  }
  
}

function roll20(){
	rollDice(20,Number(document.getElementById("d20P").value));
}
function rolld12(){
	rollDice(12, Number(document.getElementById("d12P").value));
}
function rolld10(){
	rollDice(10, Number(document.getElementById("d10P").value));
}
function rolld8(){
	rollDice(8, Number(document.getElementById("d8P").value));
}
function rolld6(){
	rollDice(6, Number(document.getElementById("d6P").value));
}
function rolld4(){
	rollDice(4, Number(document.getElementById("d4P").value));
}
function rollDice(sides, plus){
  var dice = Math.floor((Math.random() * sides) + 1);
  var tempStatus = 0;
  var tempResult = "";
  var tempName = document.getElementById("UserName").value;
  if(tempName == ""){
    tempName = "Unnamed";
  }
  if(dice == sides)
  {
    tempStatus = 1;
  }
  else if(dice == 1){
    tempStatus = -1;
  }
  tempResult = "[" + dice + "] + {" + plus + "} = " + (dice + plus);
  var output;  
  if(document.getElementById("PrivateRoll").checked == false){
    output = {result: tempResult, name: tempName, status: tempStatus}; 
    updateResultList(output);
    gapi.hangout.data.sendMessage(JSON.stringify(output));
  }else{
  output = {result: tempResult, name: "Private Roll", status: tempStatus};
  updateResultList(output);
  }
}
</script>
</head>





